# Flask-Konfiguration
FLASK_APP=app.py
FLASK_ENV=development

# KI-Konfiguration
AI_PROVIDER=openai  # Optionen: openai, custom, none
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview
MAX_TOKENS=300

# Benutzerdefinierte API-Konfiguration (nur wenn AI_PROVIDER=custom)
CUSTOM_API_URL=https://your-custom-api.example.com/analyze
CUSTOM_API_KEY=your_custom_api_key_here

# Tandoor API Konfiguration
TANDOOR_API_URL=https://your-tandoor-instance.com
TANDOOR_API_KEY=your-tandoor-api-key

# Setzen Sie die Proxy-Umgebungsvariablen, wenn Sie einen Proxy verwenden
HTTP_PROXY=http://your-proxy:port
HTTPS_PROXY=http://your-proxy:port
